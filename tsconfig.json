{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "allowJs": true,
        "removeComments": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}
